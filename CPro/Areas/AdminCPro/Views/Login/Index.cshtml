@*gan model cho view*@
@model CPro.Areas.AdminCPro.Models.LoginModel
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Admin | Login to config system</title>

    <!-- Bootstrap Core CSS -->
    <link href="/AssetCPro/Admin/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- MetisMenu CSS -->
    <link href="/AssetCPro/Admin/bower_components/metisMenu/dist/metisMenu.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="/AssetCPro/Admin/dist/css/sb-admin-2.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="/AssetCPro/Admin/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <link rel="icon" href="~/AssetCPro/Admin/image/administrator.ico" />
    <style>
        #btnLogin {
            float: right;
        }
    </style>
</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title" style="text-align: center">Quản trị Admin</h3>
                    </div>
                    <div class="panel-body">
                        @*Form Razor goi den Action Login cua Controller Login voi phuong thuc POST*@
                        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            // Hiển thị các lỗi
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <fieldset>
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @autofocus = "autofocus",@placeholder="Tài khoản" })
                                    @Html.ValidationMessageFor(model => model.UserName,"", new {@class="text-danger"})
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(model => model.PassWord, new { @class = "form-control",@placeholder="Mật khẩu" })
                                    @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger" })
                                </div>
                                <div class="checkbox">
                                    <label>
                                        @Html.CheckBoxFor(model => model.RememberMe, new {@name = "chkRemember"})Duy trì đăng nhập
                                    </label>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <button type="submit" class="btn btn-primary" id="btnLogin">Đăng nhập</button>
                            </fieldset>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="/AssetCPro/Admin/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="/AssetCPro/Admin/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="/AssetCPro/Admin/bower_components/metisMenu/dist/metisMenu.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="/AssetCPro/Admin/dist/js/sb-admin-2.js"></script>
    <script src="~/AssetCPro/Admin/js/admin-login-effect.js"></script>
</body>

</html>
